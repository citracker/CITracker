@model Shared.DTO.ResponseHandler<Shared.Models.OrganizationCountry>

@{
    ViewData["Title"] = "CI Tracker";
    ViewData["Base"] = "LocationManagement";
    ViewData["Active"] = "ManageOperationalLocation";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!--APP-CONTENT START-->
<div class="main-content app-content">
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="d-md-flex d-block align-items-center justify-content-between page-header-breadcrumb">
            <div>
                <h2 class="main-content-title fs-24 mb-1">Manage Country of Operation</h2>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Administration</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Manage Countries</li>
                </ol>
            </div>
        </div>
        <!-- Page Header Close -->
        <!-- Page Header Close -->
        <div id="project_info" class="row row-sm">
            <div class="col-4">
                <div class="card custom-card">
                    <div class="card-header justify-content-between">
                        <div class="card-title"> Add a Country of Operation </div>
                    </div>
                    @using (Html.BeginForm("AddCountry", "Admin", FormMethod.Post))
                    {                        
                        <div class="card-body">
                            <div class="row gy-4">
                                <div class="col-12">
                                    <p class="mb-2 fw-medium">
                                        Country <span style="color:red">*</span>
                                        <a href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-custom-class="tooltip-primary" class="text-primary" data-bs-original-title="Country of Operation"> <i class="fe fe-info"></i></a>
                                    </p>
                                    <input type="text" class="form-control" name="country" placeholder="Name of Country" required>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer border-top-card">
                            <button class="btn btn-success shadow-success">Submit</button>
                        </div>
                    }
                </div>
            </div>
            <div class="col-4">
                <div class="card custom-card">
                    <div class="card-header justify-content-between">
                        <div class="card-title"> Rename a Country of Operation </div>
                    </div>
                    @using(Html.BeginForm("RenameCountry", "Admin", FormMethod.Post))
                    {                        
                        <div class="card-body">
                            <div class="row gy-4">
                                <div class="col-12">
                                    <label for="input-text" class="form-label">Select a Country<span style="color:red">*</span></label>
                                    <select class="form-control" name="country" onchange="setInputFromSelect(this, 'input')" required>
                                        <option selected disabled>Select a Country</option>
                                        @if(Model.Result != null)
                                        {
                                            if (Model.Result.Any())
                                            {                                            
                                                foreach(var country in Model.Result)
                                                {
                                                    <option value="@country.Id">@country.Country</option>
                                                }
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-12">
                                    <p class="mb-2 fw-medium">
                                        Country <span style="color:red">*</span>
                                        <a href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-custom-class="tooltip-primary" class="text-primary" data-bs-original-title="Country of Operation"> <i class="fe fe-info"></i></a>
                                    </p>
                                    <input type="text" class="form-control" name="input" id="input" placeholder="Name of Country" required>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer border-top-card">
                            <button class="btn btn-success shadow-success">Submit</button>
                        </div>
                    }
                </div>
            </div>
            <div class="col-4">
                <div class="card custom-card">
                    <div class="card-header justify-content-between">
                        <div class="card-title"> Delete a Country of Operation </div>
                    </div>
                    @using (Html.BeginForm("DeleteCountry", "Admin", FormMethod.Post))
                    {                        
                        <div class="card-body">
                            <div class="row gy-4">
                                <div class="col-12">
                                    <label for="input-text" class="form-label">Select a Country<span style="color:red">*</span></label>
                                    <select class="form-control" name="country" required>
                                        <option selected disabled>Select a Country</option>
                                        @if (Model.Result != null)
                                        {
                                            if (Model.Result.Any())
                                            {
                                                foreach (var country in Model.Result)
                                                {
                                                    <option value="@country.Id">@country.Country</option>
                                                }
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer border-top-card">
                            <button class="btn btn-success shadow-success">Submit</button>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="row row-sm">
            <div class="col-xl-12"> 
                <div class="card custom-card"> 
                    <div class="card-header"> 
                        <div class="card-title"> Bulk Location Upload </div> 
                    </div> 
                    <div class="card-body"> 
                        <div class="filepond--root single-fileupload filepond--hopper" data-style-panel-layout="compact circle" data-style-button-remove-item-position="center bottom" data-style-button-process-item-position="right" data-style-load-indicator-position="center bottom" data-style-progress-indicator-position="right" data-style-button-remove-item-align="false" data-style-image-edit-button-edit-item-position="bottom center" style="height: 128px;">
                            <input class="filepond--browser" type="file" id="filepond--browser-su8moy6tg" name="filepond" aria-controls="filepond--assistant-su8moy6tg" aria-labelledby="filepond--drop-label-su8moy6tg" accept="image/png,image/jpeg,image/gif">
                            <a class="filepond--credits" aria-hidden="true" href="https://pqina.nl/" target="_blank" rel="noopener noreferrer" style="transform: translateY(128px);">Powered by PQINA</a>
                            <div class="filepond--drop-label" style="transform: translate3d(0px, 0px, 0px); opacity: 1;">
                                <label for="filepond--browser-su8moy6tg" id="filepond--drop-label-su8moy6tg" aria-hidden="true">Drag &amp; Drop your picture or <span class="filepond--label-action" tabindex="0">Browse</span></label>
                            </div>
                            <div class="filepond--list-scroller" style="transform: translate3d(0px, 0px, 0px);">
                                <ul class="filepond--list" role="list"></ul>
                            </div>
                            <div class="filepond--panel filepond--panel-root" data-scalable="false">
                                <div class="filepond--panel-top filepond--panel-root"></div>
                                <div class="filepond--panel-center filepond--panel-root" style="transform: translate3d(0px, 0px, 0px) scale3d(1, 1.28, 1);"></div>
                                <div class="filepond--panel-bottom filepond--panel-root" style="transform: translate3d(0px, 128px, 0px);"></div>
                            </div>
                            <span class="filepond--assistant" id="filepond--assistant-su8moy6tg" role="status" aria-live="polite" aria-relevant="additions"></span>
                            <div class="filepond--drip"></div>
                            <fieldset class="filepond--data"></fieldset>
                        </div>
                    </div> 
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function setInputFromSelect(selectEl, targetInputId) {
      if (!selectEl || !targetInputId) return;

      const input = document.getElementById(targetInputId);
      if (!input) return;

      const selectedOption = selectEl.options[selectEl.selectedIndex];
      input.value = selectedOption ? selectedOption.text.trim() : '';
    }
</script>