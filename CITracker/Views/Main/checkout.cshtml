<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Checkout — Survey</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/stripe.svg" rel="preload" as="image">
</head>
<body class="bg-slate-50 text-slate-800">
    <header class="max-w-6xl mx-auto p-6">
        <h1 class="text-2xl font-bold">Complete Checkout</h1>
    </header>

    <main class="max-w-6xl mx-auto p-6 grid md:grid-cols-3 gap-6">
        <!-- Left: plan summary + duration -->
        <section class="md:col-span-1 bg-white p-6 rounded-lg shadow">
            <h2 class="font-semibold">Plan</h2>
            <div id="planName" class="mt-2 text-lg font-bold">—</div>
            <div id="planMonthly" class="mt-1 text-sm text-slate-500">— / month</div>

            <hr class="my-4" />

            <label class="block text-sm font-medium">Subscription duration</label>
            <div class="mt-2 flex gap-2">
                <button class="duration-btn px-3 py-1 rounded border" data-years="1">1 year</button>
                <button class="duration-btn px-3 py-1 rounded border" data-years="2">2 years</button>
                <button class="duration-btn px-3 py-1 rounded border" data-years="3">3 years</button>
            </div>

            <div class="mt-4 text-sm">
                <div>Monthly price: <span id="monthlyPrice" class="font-medium">$0</span></div>
                <div class="mt-1">Years: <span id="selectedYears" class="font-medium">1</span></div>
                <div class="mt-1">Subtotal: <span id="subtotal" class="font-medium">$0</span></div>
                <div id="discountRow" class="mt-1 text-green-600 hidden">Discount (<span id="discountPercent">0</span>%): <span id="discountAmount">-$0</span></div>
                <div class="mt-2 text-xl font-bold">Total: <span id="totalAmount">$0</span></div>
                <div id="savingsHint" class="mt-2 text-xs text-slate-500">Select more years to save more (2 years = 10% off; 3 years = 15% off).</div>
            </div>

            <div class="mt-6">
                <button id="proceedForm" class="w-full bg-indigo-600 text-white px-4 py-2 rounded">Provide organisation details</button>
            </div>
        </section>

        <!-- Right: form and payment -->
        <section class="md:col-span-2 bg-white p-6 rounded-lg shadow">
            <form id="orgForm" class="space-y-4" onsubmit="return false;">
                <h3 class="text-lg font-semibold">Organisation details</h3>

                <div class="grid md:grid-cols-2 gap-4">
                    <div>
                        <label class="text-sm">Company name</label>
                        <input id="companyName" class="mt-1 block w-full border rounded p-2" required>
                    </div>
                    <div>
                        <label class="text-sm">Country</label>
                        <input id="country" class="mt-1 block w-full border rounded p-2" required>
                    </div>
                    <div>
                        <label class="text-sm">Address</label>
                        <input id="address" class="mt-1 block w-full border rounded p-2" required>
                    </div>
                    <div>
                        <label class="text-sm">Admin email</label>
                        <input id="adminEmail" type="email" class="mt-1 block w-full border rounded p-2" required>
                    </div>
                    <div>
                        <label class="text-sm">Admin first name</label>
                        <input id="firstName" class="mt-1 block w-full border rounded p-2" required>
                    </div>
                    <div>
                        <label class="text-sm">Admin last name</label>
                        <input id="lastName" class="mt-1 block w-full border rounded p-2" required>
                    </div>
                    <div>
                        <label class="text-sm">Phone number</label>
                        <input id="phone" class="mt-1 block w-full border rounded p-2" required>
                    </div>
                    <div>
                        <label class="text-sm">Optional note</label>
                        <input id="note" class="mt-1 block w-full border rounded p-2">
                    </div>
                </div>

                <div id="otpArea" class="mt-2">
                    <button id="sendOtp" class="inline-flex items-center gap-2 bg-slate-800 text-white px-3 py-2 rounded">Send verification code to email</button>

                    <div id="otpForm" class="mt-3 hidden">
                        <label class="text-sm">Enter OTP code</label>
                        <div class="flex gap-2 mt-1">
                            <input id="otpInput" class="block w-1/3 border rounded p-2" placeholder="6-digit code">
                            <button id="verifyOtp" class="inline-flex items-center gap-2 bg-green-600 text-white px-3 py-2 rounded">Verify</button>
                        </div>
                        <div id="otpMessage" class="mt-2 text-sm"></div>
                    </div>
                </div>

                <hr class="my-4">

                <h3 class="text-lg font-semibold">Checkout options</h3>
                <div class="mt-3 grid grid-cols-2 gap-4">
                    <label class="p-3 border rounded cursor-pointer flex items-center gap-3">
                        <input type="radio" name="paymentMethod" value="stripe" checked>
                        <!-- simple svg logos -->
                        <img src="https://upload.wikimedia.org/wikipedia/commons/3/3f/Stripe_Symbol.png" alt="Stripe" class="h-6">
                        <span>Stripe</span>
                    </label>

                    <label class="p-3 border rounded cursor-pointer flex items-center gap-3">
                        <input type="radio" name="paymentMethod" value="square">
                        <img src="https://developer.squareup.com/images/square-logo.svg" alt="Square" class="h-6">
                        <span>Square</span>
                    </label>
                </div>

                <div class="mt-6">
                    <button id="payBtn" class="w-full bg-indigo-600 text-white px-4 py-2 rounded disabled:opacity-60" disabled>Pay now</button>
                    <div id="paymentNote" class="mt-3 text-xs text-slate-500">
                        Note: Payment integration requires server-side endpoints to create payment sessions (Stripe/Square). This demo will call placeholder endpoints.
                    </div>
                </div>

                <div id="result" class="mt-4"></div>
            </form>
        </section>
    </main>

    <footer class="max-w-6xl mx-auto p-6 text-xs text-slate-400">
        © <span id="year"></span> Survey
    </footer>

    <script>
        document.getElementById('year').textContent = new Date().getFullYear();

        // Load selected plan from localStorage
        const selectedPlanRaw = localStorage.getItem('selectedPlan');
        const defaultPlan = { id: 'standard', name: 'Standard', monthly: 49 };
        const plan = selectedPlanRaw ? JSON.parse(selectedPlanRaw) : defaultPlan;

        const planNameEl = document.getElementById('planName');
        const planMonthlyEl = document.getElementById('planMonthly');
        const monthlyPriceEl = document.getElementById('monthlyPrice');
        const selectedYearsEl = document.getElementById('selectedYears');
        const subtotalEl = document.getElementById('subtotal');
        const discountRow = document.getElementById('discountRow');
        const discountPercentEl = document.getElementById('discountPercent');
        const discountAmountEl = document.getElementById('discountAmount');
        const totalAmountEl = document.getElementById('totalAmount');
        const savingsHint = document.getElementById('savingsHint');
        const payBtn = document.getElementById('payBtn');

        planNameEl.textContent = plan.name;
        planMonthlyEl.textContent = `$${plan.monthly} / month`;
        monthlyPriceEl.textContent = `$${plan.monthly.toFixed(2)}`;

        // default selection
        let years = 1;
        const discounts = { 1: 0, 2: 10, 3: 15 }; // percent

        function recalc() {
          const monthly = parseFloat(plan.monthly || 0);
          const months = years * 12;
          const subtotal = monthly * months;
          const discountPercent = discounts[years] || 0;
          const discountAmount = subtotal * (discountPercent / 100);
          const total = subtotal - discountAmount;

          selectedYearsEl.textContent = years;
          subtotalEl.textContent = `$${subtotal.toFixed(2)}`;

          if (discountPercent > 0) {
            discountRow.classList.remove('hidden');
            discountPercentEl.textContent = discountPercent;
            discountAmountEl.textContent = `-$${discountAmount.toFixed(2)}`;
          } else {
            discountRow.classList.add('hidden');
          }

          totalAmountEl.textContent = `$${total.toFixed(2)}`;
          // enable proceed only when org form validated + OTP validated — handled separately
        }

        recalc();

        document.querySelectorAll('.duration-btn').forEach(btn => {
          btn.addEventListener('click', () => {
            years = parseInt(btn.getAttribute('data-years'), 10);
            // toggle active styles
            document.querySelectorAll('.duration-btn').forEach(b => b.classList.remove('bg-indigo-600','text-white'));
            btn.classList.add('bg-indigo-600','text-white');
            recalc();
          });
        });

        // Proceed to show/auto-scroll to the form
        document.getElementById('proceedForm').addEventListener('click', () => {
          document.getElementById('companyName').focus();
          window.scrollTo({ top: document.getElementById('orgForm').offsetTop - 20, behavior: 'smooth' });
        });

        // ---------- OTP Flow (SIMULATED) ----------
        let lastOtp = null;
        let otpVerified = false;

        document.getElementById('sendOtp').addEventListener('click', async (e) => {
          e.preventDefault();
          // Validate email present
          const email = document.getElementById('adminEmail').value.trim();
          if (!email) {
            alert('Please enter admin email before requesting OTP');
            return;
          }

          // In production: call your server endpoint to send OTP e.g. POST /api/send-otp { email }
          // Here: simulate by generating code and logging to console (replace with real send)
          lastOtp = Math.floor(100000 + Math.random() * 900000).toString();
          console.info('SIMULATED OTP (replace with real email send):', lastOtp);

          // show otp form
          document.getElementById('otpForm').classList.remove('hidden');
          document.getElementById('otpMessage').textContent = 'A verification code was sent to ' + email + ' (simulated). Check your email or console.';
          document.getElementById('otpInput').value = '';
          otpVerified = false;
          updatePayButtonState();
        });

        document.getElementById('verifyOtp').addEventListener('click', (e) => {
          e.preventDefault();
          const val = document.getElementById('otpInput').value.trim();
          const msg = document.getElementById('otpMessage');
          if (!lastOtp) {
            msg.textContent = 'No code has been sent yet.';
            return;
          }
          if (val === lastOtp) {
            otpVerified = true;
            msg.textContent = 'Email validated successfully ✅';
            msg.classList.remove('text-red-600');
            msg.classList.add('text-green-600');
            // set a marker — could also call server to mark verified
            updatePayButtonState();
          } else {
            otpVerified = false;
            msg.textContent = 'Invalid code — try again';
            msg.classList.remove('text-green-600');
            msg.classList.add('text-red-600');
            updatePayButtonState();
          }
        });

        // Enable pay button only when required fields filled and OTP verified
        function validateFormFields() {
          const requiredIds = ['companyName','country','address','adminEmail','firstName','lastName','phone'];
          for (const id of requiredIds) {
            const v = document.getElementById(id).value.trim();
            if (!v) return false;
          }
          return true;
        }

        function updatePayButtonState() {
          const ok = validateFormFields() && otpVerified;
          payBtn.disabled = !ok;
        }

        // Re-check form fields on input
        document.querySelectorAll('#orgForm input').forEach(inp => {
          inp.addEventListener('input', () => updatePayButtonState());
        });

        // ---------- Payment handler (PLACEHOLDER) ----------
        // NOTE: Stripe and Square require server-side session creation.
        // Below expects endpoints:
        // POST /create-checkout-session  { planId, years, total, currency, customer }  => returns { url } or { sessionId }
        // POST /create-square-payment    { ... } => returns { checkoutUrl } etc.
        //
        // Replace the fetch URLs below with your server endpoints that call Stripe / Square SDKs.
        document.getElementById('payBtn').addEventListener('click', async (e) => {
          e.preventDefault();
          const method = document.querySelector('input[name="paymentMethod"]:checked').value;
          const totalText = totalAmountEl.textContent.replace('$','');
          const payload = {
            planId: plan.id,
            planName: plan.name,
            monthly: plan.monthly,
            years,
            total: parseFloat(totalText),
            currency: 'USD',
            organization: {
              companyName: document.getElementById('companyName').value.trim(),
              country: document.getElementById('country').value.trim(),
              address: document.getElementById('address').value.trim(),
              adminEmail: document.getElementById('adminEmail').value.trim(),
              firstName: document.getElementById('firstName').value.trim(),
              lastName: document.getElementById('lastName').value.trim(),
              phone: document.getElementById('phone').value.trim(),
              note: document.getElementById('note').value.trim()
            }
          };

          // show spinner
          payBtn.disabled = true;
          payBtn.textContent = 'Processing...';

          try {
            if (method === 'stripe') {
              // Example: POST to your server to create Stripe Checkout session
              // Server must use secret key to create session and return session.url or session.id
              const res = await fetch('/create-checkout-session', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
              });

              if (!res.ok) throw new Error('Server error when creating Stripe session');

              const json = await res.json();
              // Expected: { url: "https://checkout.stripe.com/..." } or { sessionId: "..." }
              if (json.url) {
                window.location.href = json.url;
                return;
              } else if (json.sessionId) {
                // If server returns sessionId then you would call stripe.redirectToCheckout({ sessionId })
                // You need to include Stripe.js on the page and initialize with your publishable key.
                // e.g. const stripe = Stripe('pk_test_xxx'); stripe.redirectToCheckout({ sessionId: json.sessionId });
                alert('Server returned sessionId. Implement client redirect using Stripe.js.');
              } else {
                throw new Error('Unexpected server response for Stripe');
              }
            } else if (method === 'square') {
              // Example: POST to your server to create Square checkout link
              const res = await fetch('/create-square-checkout', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
              });

              if (!res.ok) throw new Error('Server error when creating Square checkout');

              const json = await res.json();
              if (json.checkoutUrl) {
                window.location.href = json.checkoutUrl;
                return;
              } else {
                throw new Error('Unexpected server response for Square');
              }
            }
          } catch (err) {
            console.error(err);
            document.getElementById('result').innerHTML = `<div class="text-red-600">Payment failed: ${err.message}</div>`;
          } finally {
            payBtn.disabled = false;
            payBtn.textContent = 'Pay now';
            updatePayButtonState();
          }
        });

        // Helpful: show calculated saving compared to month-by-month subscription
        // Already shown via discount row
    </script>
</body>
</html>
