@model Shared.ViewModels.ContinuousImprovementVM

<!-- Page Header Close -->
<div id="team_info" class="row row-sm d-none">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header justify-content-between">
                <div class="card-title"> Team Members </div>
            </div>
            <div class="card-body teamCardBody" style="min-height: 650px;height: 650px;overflow-y:scroll;">
                <!--Hidden form-->
                <div class="row gy-4 teamBody m-3 d-none" id="teamTemplate">
                    <div class="col-xl-4">
                        <label class="form-label">Name<span style="color:red">*</span></label>
                        <select class="js-choice teammember-select" name="teammember"></select>
                    </div>

                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3">
                        <label for="text-area" class="form-label">
                            Role <span style="color:red">*</span>
                            <a href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-custom-class="tooltip-primary" class="text-primary" data-bs-original-title="Select roles for team members, ensure to have a minimum of one facilitator/owner"> <i class="fe fe-info"></i></a>
                        </label>
                        <select class="form-control" id="role" name="role">
                            <option selected disabled>Select Role</option>
                            <option value="Executive Sponsor">Executive Sponsor</option>
                            <option value="Sponsor">Sponsor</option>
                            <option value="Facilitator">Facilitator/Owner</option>
                            <option value="Team Member">Team Member</option>
                            <option value="Champion">Champion</option>
                            <option value="Stakeholders">Stakeholders</option>
                            <option value="Coach/Mentor">Coach/Mentor</option>
                            <option value="Resources">Resources</option>
                        </select>
                    </div>


                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                        <p class="mb-2 fw-medium">
                            Notification
                            <a href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-custom-class="tooltip-primary" class="text-primary" data-bs-original-title="Toggle for any team member you would like to receive an email notification whenever any update is made"> <i class="fe fe-info"></i></a>
                        </p>
                        <div class="form-check form-check-lg d-flex align-items-center align-self-center">
                            <input class="form-check-input" type="checkbox" value="" id="checkebox-lg">
                        </div>
                    </div>

                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                        <p class="mb-2 fw-medium">Add/Remove</p>
                        <div class="mb-md-0 mb-2">
                            <button class="btn btn-icon btn-primary btn-wave waves-effect waves-light add"> <i class="fe fe-plus"></i> </button>
                            <button class="btn btn-icon btn-warning btn-wave me-5 waves-effect waves-light d-none remove"> <i class="fe fe-minus"></i> </button>
                        </div>
                    </div>
                </div>

                <div class="row gy-4 teamBody m-3">
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                        <label for="teammember" class="form-label">Name<span style="color:red">*</span></label>
                        <select class="js-choice teammember-select" name="teammember[]" required></select>
                    </div>


                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3">
                        <label for="role" class="form-label">Role <span style="color:red">*</span>
                            <a href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-custom-class="tooltip-primary" class="text-primary" data-bs-original-title="Select roles for team members, ensure to have a minimum of one facilitator/owner"> <i class="fe fe-info"></i></a>
                        </label>
                        <select class="form-control" id="role" name="role">
                            <option selected disabled>Select Role</option>
                            <option value="Executive Sponsor">Executive Sponsor</option>
                            <option value="Sponsor">Sponsor</option>
                            <option value="Facilitator">Facilitator/Owner</option>
                            <option value="Team Member">Team Member</option>
                            <option value="Champion">Champion</option>
                            <option value="Stakeholders">Stakeholders</option>
                            <option value="Coach/Mentor">Coach/Mentor</option>
                            <option value="Resources">Resources</option>
                        </select>
                    </div>


                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                        <p class="mb-2 fw-medium">Notification
                            <a href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-custom-class="tooltip-primary" class="text-primary" data-bs-original-title="Toggle for any team member you would like to receive an email notification whenever any update is made"> <i class="fe fe-info"></i></a>
                        </p>
                        <div class="form-check form-check-lg d-flex align-items-center align-self-center"> 
                            <input class="form-check-input" type="checkbox" value="" id="checkebox-lg"> 
                        </div>
                    </div>

                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                        <p class="mb-2 fw-medium">Add/Remove</p>
                        <div class="mb-md-0 mb-2"> 
                            <button class="btn btn-icon btn-primary btn-wave waves-effect waves-light add"> <i class="fe fe-plus"></i> </button>
                            <button class="btn btn-icon btn-warning btn-wave me-5 waves-effect waves-light d-none remove"> <i class="fe fe-minus"></i> </button> 
                        </div>
                    </div>

                </div>
            </div>
            <div class="card-footer border-top-card">
                <button class="btn btn-primary" onclick="loadPartial('team_info', 'project_info')">Previous</button>
                <button class="btn btn-success shadow-success" onclick="loadPartial('team_info', 'tools_info')">Save &amp; Next</button>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        const users = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.OrganizationUser));

        let formCount = 1;
        const teamMemberChoices = new WeakMap();

        function initTeamMemberSelect(selectEl) {
            if (!selectEl || teamMemberChoices.has(selectEl)) return;

            const choice = new Choices(selectEl, {
                removeItemButton: true,
                searchEnabled: true,
                shouldSort: false,
                placeholderValue: 'Type user...'
            });

            teamMemberChoices.set(selectEl, choice);

            selectEl.addEventListener('search', function (event) {
                const term = event.detail.value.toLowerCase();

                const filtered = users.filter(u =>
                    u.Name.toLowerCase().includes(term)
                );

                choice.clearChoices();
                choice.setChoices(
                    filtered.map(u => ({
                        value: u.Id,
                        label: u.Name
                    })),
                    'value',
                    'label',
                    true
                );
            });
        }


        $(document).ready(function () {
            initTeamMemberSelect(document.querySelectorAll('.teammember-select')[1]);
        });


        $(document).on('click', '.add', function () {
            formCount++;

            const newForm = $('#teamTemplate')
                .clone(true, true)
                .removeClass('d-none')
                .removeAttr('id');

            const select = newForm.find('.teammember-select')[0];

            select.id = `teammember_${formCount}`;

            newForm.find('.add').addClass('d-none');
            newForm.find('.remove').removeClass('d-none');

            $('.teamCardBody').append(newForm);

            initTeamMemberSelect(select);
        });


        // 🔹 Remove row
        $(document).on('click', '.remove', function () {
            if ($('.teamBody').length > 1) {
                $(this).closest('.teamBody').remove();
            }
        });

    });
</script>