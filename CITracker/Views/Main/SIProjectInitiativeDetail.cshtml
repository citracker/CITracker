@using Shared.Enumerations 
@inject IHttpContextAccessor hca
@model Shared.ViewModels.StrategicInitiativeVM

@{
    ViewData["Title"] = "CI Tracker";
    ViewData["Base"] = "InitiativeManagement";
    ViewData["Active"] = "CreateSISubProject";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!--APP-CONTENT START-->
<div class="main-content app-content">
    <div class="container-fluid">

        @if (Model.Initiative.SingleResult != null)
        {
            <!-- Page Header -->
            <div class="d-md-flex d-block align-items-center justify-content-between page-header-breadcrumb">
                <div>
                    <h2 class="main-content-title fs-24 mb-1">Existing Initiative</h2>
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="javascript:void(0)">Strategic Project</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Initiative Detail</li>
                    </ol>
                </div>
            </div>
            <!-- Page Header Close -->
            <!-- Page Header Close -->
            <div id="project_info" class="row row-sm">
                <div class="col-xl-12">
                    <div class="card custom-card">
                        <div class="card-header justify-content-between">
                            <div class="card-title"> Initiative Details </div>
                        </div>
                        @using (Html.BeginForm("UpdateSIProject", "Main", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="card-body">
                                @{
                                    var isAdminOrFacilitator = hca?.HttpContext?.Session?.GetString("UserRole") == "Admin" || Model.Initiative.SingleResult.OwnerId == Convert.ToInt64(hca?.HttpContext?.Session?.GetString("UserId"));
                                }
                                @if (Model.Message.Length > 5)
                                {
                                    if (Model.Message.ToLower().Contains("success"))
                                    {
                                        <div class="alert alert-success" role="alert">
                                            @Model.Message
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            @Model.Message
                                        </div>
                                    }
                                }
                                <div class="row gy-4">
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                        <p class="mb-2 fw-medium">
                                            Title <span style="color:red">*</span>
                                            <a href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-custom-class="tooltip-primary" class="text-primary" data-bs-original-title="A good title should be short and contain searchable words"> <i class="fe fe-info"></i></a>
                                        </p>
                                        <input type="text" class="form-control" name="title" value="@Model.Initiative.SingleResult.Title" @(isAdminOrFacilitator == true ? "" : "readonly") required>
                                        <input type="text" class="form-control" name="id" value="@Model.Initiative.SingleResult.Id" hidden required>
                                    </div>

                                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-12">
                                        <label for="startdate" class="form-label">Start Date</label>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="input-group-text text-muted"> <i class="ri-calendar-line"></i> </div>
                                                <input type="text" class="form-control flatpickr-input active" id="startdate" name="startdate" placeholder="Start Date" readonly="readonly" value="@(Model.Initiative.SingleResult.StartDate.ToString("yyyy-MM-dd"))" @(isAdminOrFacilitator == true ? "" : "readonly") required>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-12">
                                        <label for="enddate" class="form-label">End Date</label>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="input-group-text text-muted"> <i class="ri-calendar-line"></i> </div>
                                                <input type="text" class="form-control flatpickr-input active" id="enddate" name="enddate" placeholder="End Date" readonly="readonly" value="@(Model.Initiative.SingleResult.EndDate.ToString("yyyy-MM-dd"))" @(isAdminOrFacilitator == true ? "" : "readonly") required>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-12">
                                        <label for="input-text" class="form-label">Priority<span style="color:red">*</span></label>
                                        <select class="form-control" name="priority" @(isAdminOrFacilitator == true ? "" : "readonly")>
                                            <option value="High" @(Model.Initiative.SingleResult.Priority == "High" ? "selected" : "")>High</option>
                                            <option value="Medium" @(Model.Initiative.SingleResult.Priority == "Medium" ? "selected" : "")>Medium</option>
                                            <option value="Low" @(Model.Initiative.SingleResult.Priority == "Low" ? "selected" : "")>Low</option>
                                        </select>
                                    </div>

                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                                        <label for="text-area" class="form-label">
                                            Description <span style="color:red">*</span>
                                            <a href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-custom-class="tooltip-primary" class="text-primary" data-bs-original-title="A good problem statement should contain - what, where, when and impact to the business."> <i class="fe fe-info"></i></a>
                                        </label>
                                        <textarea class="form-control" name="description" rows="3" @(isAdminOrFacilitator == true ? "" : "readonly") required>@Model.Initiative.SingleResult.Description</textarea>
                                    </div>

                                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                                        <label for="input-text" class="form-label">Owner<span style="color:red">*</span></label>
                                        <select class="js-choice" name="owner" id="owner" @(isAdminOrFacilitator == true ? "" : "readonly") required>
                                        </select>
                                    </div>

                                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                                        <label for="input-text" class="form-label">Executive Sponsor<span style="color:red">*</span></label>
                                        <select class="js-choice" name="execsponsor" id="execsponsor" @(isAdminOrFacilitator == true ? "" : "readonly") required>
                                        </select>
                                    </div>

                                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                                        <label for="input-text" class="form-label">Percentage Status<span style="color:red">*</span></label>
                                        <div class="input-group mb-3">
                                            <input type="text" class="form-control" max="100" value="@Model.Initiative.SingleResult.PercentageProgress" readonly>
                                            <button class="btn btn-outline-primary" type="button">&percnt;</button>
                                        </div>
                                    </div>

                                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                                        <label for="status" class="form-label">Status<span style="color:red">*</span></label>
                                        <select class="form-control" name="status" id="status" @(isAdminOrFacilitator == true ? "" : "readonly") required>
                                            @{
                                                var currentStatus = Model.Initiative.SingleResult.Status;
                                                var isAdmin = hca?.HttpContext?.Session?.GetString("UserRole") == "Admin";
                                            }

                                            @foreach (Status item in Enum.GetValues(typeof(Status)))
                                            {
                                                if (item == Status.CLOSED && !isAdmin)
                                                {
                                                    continue;
                                                }

                                                <option value="@item" selected="@(currentStatus == item.ToString())">
                                                    @item
                                                </option>
                                            }
                                        </select>
                                    </div>

                                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                                        <label for="input-text" class="form-label">Cummulated ROI<span style="color:red">*</span></label>
                                        <div class="input-group mb-3">
                                            <input type="text" class="form-control" value="@Model.Initiative.SingleResult.CummulativeROI.ToString("N2")" readonly>
                                            <button class="btn btn-outline-primary" type="button">@Model.Initiative.SingleResult.Currency</button>
                                        </div>
                                    </div>

                                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                                        <label for="country" class="form-label">Country<span style="color:red">*</span></label>
                                        <select class="form-control" name="country" id="country" onchange="onCountryChange(this, 'facility')" @(isAdminOrFacilitator == true ? "" : "readonly") required>
                                            @if (Model.OrganizationCountry != null)
                                            {
                                                if (Model.OrganizationCountry.Any())
                                                {
                                                    foreach (var country in Model.OrganizationCountry)
                                                    {
                                                        if (Model.Initiative.SingleResult.OrganizationCountryId == country.Id)
                                                        {
                                                            <option value="@country.Id" selected>@country.Country</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@country.Id">@country.Country</option>
                                                        }
                                                    }
                                                }
                                            }
                                        </select>
                                    </div>

                                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                                        <label for="facility" class="form-label">Location/Facility</label>
                                        <select class="form-control" name="facility" id="facility" onchange="onFacilityChange(this, 'department')" @(isAdminOrFacilitator == true ? "" : "readonly") required>
                                        </select>
                                    </div>

                                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                                        <label for="department" class="form-label">
                                            Department<span style="color:red">*</span>
                                            <a href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-custom-class="tooltip-primary" class="text-primary" data-bs-original-title="Select functional groups that owns the project being improved"> <i class="fe fe-info"></i></a>
                                        </label>
                                        <select class="form-control" name="department" id="department" @(isAdminOrFacilitator == true ? "" : "readonly") required>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer border-top-card">
                                <button @(isAdminOrFacilitator == true ? "type=submit" : "type=button") class="btn btn-success shadow-success">Submit</button>
                            </div>
                        }

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="card custom-card mg-b-20 tasks">
                        <div class="card-body">
                            <div class="card-header border-bottom-0 pt-0 ps-0 pe-0 pb-2 d-flex">
                                <div>
                                    <div class="card-title"> Sub Projects </div>
                                    <p class="mb-0 fs-12 mb-3 text-muted">All Sub Projects.</p>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <div id="datatable-basic_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <table id="mySISubProjects" class="table table-bordered text-nowrap dataTable no-footer" style="width: 100%;" aria-describedby="datatable-basic_info">
                                                <thead>
                                                    <tr>
                                                        <th class="sorting sorting_asc" tabindex="0" aria-controls="datatable-basic" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Initiative: activate to sort column descending" style="width: 121.992px;">Initiative</th>
                                                        <th class="sorting" tabindex="0" aria-controls="datatable-basic" rowspan="1" colspan="1" aria-label="Description: activate to sort column ascending" style="width: 82.992px;">Description</th>
                                                        <th class="sorting" tabindex="0" aria-controls="datatable-basic" rowspan="1" colspan="1" aria-label="Facilitator: activate to sort column ascending" style="width: 82.992px;">Facilitator</th>
                                                        <th class="sorting" tabindex="0" aria-controls="datatable-basic" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 82.992px;">Status</th>
                                                        <th class="sorting" tabindex="0" aria-controls="datatable-basic" rowspan="1" colspan="1" aria-label="Savings: activate to sort column ascending" style="width: 82.992px;">Savings</th>
                                                        <th class="sorting" tabindex="0" aria-controls="datatable-basic" rowspan="1" colspan="1" aria-label="Start Date: activate to sort column ascending" style="width: 82.992px;">Start Date</th>
                                                        <th class="sorting" tabindex="0" aria-controls="datatable-basic" rowspan="1" colspan="1" aria-label="End Date: activate to sort column ascending" style="width: 82.992px;">End Date</th>
                                                        <th class="sorting" tabindex="0" aria-controls="datatable-basic" rowspan="1" colspan="1" aria-label="Date Created: activate to sort column ascending" style="width: 82.992px;">Date Created</th>
                                                        <th class="sorting" tabindex="0" aria-controls="datatable-basic" rowspan="1" colspan="1" aria-label="Created By: activate to sort column ascending" style="width: 82.992px;">Created By</th>
                                                        <th class="sorting" tabindex="0" aria-controls="datatable-basic" rowspan="1" colspan="1" aria-label="Action: activate to sort column ascending" style="width: 68.992px;">Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if(Model.SubProject != null)
                                                    {
                                                        if (Model.SubProject.Any())
                                                        {
                                                            foreach (var i in Model.SubProject)
                                                            {
                                                                <tr class="@(i.Id / 2 != 0 ? "odd" : "even")" data-id="@i.Id">
                                                                    <td>@i.Initiative</td>
                                                                    <td>@i.Description</td>
                                                                    <td>@i.Facilitator</td>
                                                                    <td>@{@i.Percentage}%</td>
                                                                    <td>@i.Currency@String.Format("{0:N}", i.Savings)</td>
                                                                    <td>@String.Format("{0:dd MMMM, yyy}", Convert.ToDateTime(i.StartDate))</td>
                                                                    <td>@String.Format("{0:dd MMMM, yyy}", Convert.ToDateTime(i.EndDate))</td>
                                                                    <td>@String.Format("{0:dd MMMM, yyy}", Convert.ToDateTime(i.DateCreated))</td>
                                                                    <td>@i.CreatedByUser</td>
                                                                    <td>
                                                                        <a class="align-content-start ms-2 me-2" href="@Url.Action("SISubProjectDetail", "Main", new { id = i.Id })"><i class="fe fe-edit"></i></a>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- col end -->
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-xxl-3 col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                    <div class="card bg-white border-0">
                        <div class="alert custom-alert1 alert-danget">
                            <div class="text-center px-5 pb-0">
                                <svg class="custom-alert-icon svg-warning" xmlns="http://www.w3.org/2000/svg" height="1.5rem" viewBox="0 0 24 24" width="1.5rem" fill="#000000"><path d="M0 0h24v24H0z" fill="none"></path><path d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z"></path></svg>
                                <h5>Data Retrieval Error</h5>
                                <p class="">Could not successfully fetch data.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!--APP-CONTENT CLOSE-->
<script>
    const facilities = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.OrganizationFacility));
    const departments = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.OrganizationDepartment));
    const users = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.OrganizationUser));
    const preSelectedFacilityId = @(Model.Initiative.SingleResult.OrganizationFacilityId);
    const preSelectedDepartmentId = @(Model.Initiative.SingleResult.OrganizationDepartmentId);
    const countrySelect = document.getElementById('country');


    document.addEventListener("DOMContentLoaded", function () {
        let endPicker;
        var table = $('#mySISubProjects').DataTable({
                        scrollX: true,
                        scrollCollapse: true,
                        paging: false,
                        info: false,
                        lengthChange: false,
                        fixedColumns: {
                            leftColumns: 3,
                            rightColumns: 1 // optional
                        },
                        language: {
                            emptyTable: "No record found"
                        }
                    });


        if (countrySelect && countrySelect.value) {
            onCountryChange(countrySelect, 'facility');
        }

        const facilitySelect = document.getElementById('facility');

        if (facilitySelect && facilitySelect.value) {
            onFacilityChange(facilitySelect, 'department');
        }


        endPicker = flatpickr("#enddate", {
            dateFormat: "Y-m-d"
        });

        const startPicker = flatpickr("#startdate", {
            dateFormat: "Y-m-d",
            onChange: function (selectedDates) {
                if (selectedDates.length) {
                    const startDate = selectedDates[0];

                    // Set min date for end date
                    endPicker.set("minDate", startDate);

                    // Optional: auto-set end date to +12 months
                    const endDate = new Date(startDate);
                    endDate.setFullYear(endDate.getFullYear() + 1);
                    endPicker.setDate(endDate, true);
                }
            }
        });
    });

    function onCountryChange(selectEl, targetInputId) {
        const countryId = parseInt(selectEl.value);
        const locationSelect = document.getElementById(targetInputId);

        locationSelect.innerHTML ='';

        if (isNaN(countryId)) return;

        const filtered = facilities.filter(l => l.OrganizationCountryId === countryId);

        filtered.forEach(item => {
            const option = document.createElement('option');
            option.value = item.Id;
            option.textContent = item.Facility;
            if (item.Id == preSelectedFacilityId){
                option.selected = true;
            }
            locationSelect.appendChild(option);
        });
    }

    function onFacilityChange(selectEl, targetInputId) {
        const facilityId = parseInt(selectEl.value);
        const locationSelect = document.getElementById(targetInputId);
        
        locationSelect.innerHTML ='';

        if (isNaN(facilityId)) return;

        const filtered = departments.filter(l => l.OrganizationFacilityId === facilityId);

        filtered.forEach(item => {
            const option = document.createElement('option');
            option.value = item.Id;
            option.textContent = item.Department;
            if (item.Id == preSelectedDepartmentId){
                option.selected = true;
            }
            locationSelect.appendChild(option);
        });
    }

    function formatNumberRealTime(input) {
        let cursorPos = input.selectionStart;
        let formattedValue = input.value;
        let numbersOnly = formattedValue.replace(/[^\d.]/g, '');

        let parts = numbersOnly.split('.');
        if (parts.length > 2) {
            numbersOnly = parts[0] + '.' + parts.slice(1).join('');
        }

        if (parts[0].length > 0) {
            parts[0] = parseInt(parts[0] || '0', 10).toLocaleString('en-US');
        }

        formattedValue = parts.join('.');
        input.value = formattedValue;

        let newCursorPos = cursorPos + (formattedValue.length - input.value.length);
        input.setSelectionRange(newCursorPos, newCursorPos);
    }



    const selectedFacilitatorId = @(Model.Initiative.SingleResult.OwnerId > 0 ? Model.Initiative.SingleResult.OwnerId.ToString() : null);
    const selectedExecSponsorId = @(Model.Initiative.SingleResult.ExecutiveSponsorId > 0 ? Model.Initiative.SingleResult.ExecutiveSponsorId.ToString() : null);


    var facChoice = new Choices('#owner', {
            removeItemButton: true,
            searchEnabled: true,
            shouldSort: false,
            placeholderValue: 'Type user...'
        });

    var execspnChoice = new Choices('#execsponsor', {
            removeItemButton: true,
            searchEnabled: true,
            shouldSort: false,
            placeholderValue: 'Type user...'
        });



    if (selectedFacilitatorId !== null) {
        const preSelected = users.find(
            u => u.Id === Number(selectedFacilitatorId)
        );

        if (preSelected) {
            facChoice.setChoices(
                [{
                    value: preSelected.Id,
                    label: preSelected.Name,
                    selected: true
                }],
                'value',
                'label',
                false
            );
        }
    }

    if (selectedExecSponsorId !== null) {
        const preSelected = users.find(
            u => u.Id === Number(selectedExecSponsorId)
        );

        if (preSelected) {
            execspnChoice.setChoices(
                [{
                    value: preSelected.Id,
                    label: preSelected.Name,
                    selected: true
                }],
                'value',
                'label',
                false
            );
        }
    }

    const facilitatorEl = document.getElementById('owner');
    const execsponsorEl = document.getElementById('execsponsor');


    facilitatorEl.addEventListener('search', function (event) {
        const searchTerm = event.detail.value.toLowerCase();
        // Filter items by Name
        const filtered = users.filter(i =>
            i.Name.toLowerCase().includes(searchTerm)
        );

        // Replace choices
        facChoice.clearChoices();
        facChoice.setChoices(
            filtered.map(i => ({
                value: i.Id,
                label: i.Name
            })),
            'value',
            'label',
            true
        );
    });


    execsponsorEl.addEventListener('search', function (event) {
        const searchTerm = event.detail.value.toLowerCase();
        // Filter items by Name
        const filtered = users.filter(i =>
            i.Name.toLowerCase().includes(searchTerm)
        );

        // Replace choices
        execspnChoice.clearChoices();
        execspnChoice.setChoices(
            filtered.map(i => ({
                value: i.Id,
                label: i.Name
            })),
            'value',
            'label',
            true
        );
    });

    if (selectedFacilitatorId !== null) {
        facChoice.setChoiceByValue(selectedFacilitatorId.toString());
    }

    if (selectedExecSponsorId !== null) {
        execspnChoice.setChoiceByValue(selectedExecSponsorId.toString());
    }
</script>