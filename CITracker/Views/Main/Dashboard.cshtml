<script>
    const chartDom = document.getElementById('pieChart');
    const myChart = echarts.init(chartDom);

    const option = {
        title: {
            text: 'PIE CHART',
            left: 'left'
        },
        tooltip: {
            trigger: 'item'
        },
        legend: {
            orient: 'vertical',
            left: 'left'
        },
        emphasis: {
            itemStyle: {
                shadowBlur: 25,
                shadowOffsetX: 0,
                shadowOffsetY: 8,
                shadowColor: 'rgba(0, 0, 0, 0.4)'
            }
        },
        series: [
            {
                name: 'Access From',
                type: 'pie',
                radius: ['70%'],
                label: {
                    show: true,
                    formatter: '{b}'
                },
                labelLine: {
                    show: true
                },
                data: []
            }
        ]
    };

    myChart.setOption(option);

    async function loadChartData() {
        try {
            const response = await fetch('/MethodologyCount');
            const data = await response.json();

            myChart.setOption({
                series: [{
                    data: data
                }]
            });

        } catch (error) {
            console.error('Error loading chart data:', error);
        }
    }

    loadChartData();
    myChart.showLoading();
    myChart.hideLoading();
    setInterval(loadChartData, 30000);




    const chartDom1 = document.getElementById('pieChart1');
    const myChart1 = echarts.init(chartDom1);

    const option1 = {
        title: {
            text: 'PIE CHART',
            left: 'left'
        },
        tooltip: {
            trigger: 'item'
        },
        legend: {
            orient: 'vertical',
            left: 'left'
        },
        series: [
            {
                name: 'Access From',
                type: 'pie',
                radius: ['40%', '70%'],
                label: {
                    show: true,
                    formatter: '{b}'
                },
                labelLine: {
                    show: true
                },
                data: []
            }
        ]
    };

    myChart1.setOption(option1);

    async function loadChartData1() {
        try {
            const response = await fetch('/ProjectStatusCount');
            const data = await response.json();

            myChart1.setOption({
                series: [{
                    data: data
                }]
            });

        } catch (error) {
            console.error('Error loading chart data:', error);
        }
    }

    loadChartData1();
    myChart1.showLoading();
    myChart1.hideLoading();
    setInterval(loadChartData1, 30000);


    const ctx = document.getElementById('barChart').getContext('2d');

    const barChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: [],     // will be filled dynamically
            datasets: [{
                label: 'Sales',
                data: [],
                backgroundColor: 'rgba(54, 162, 235, 0.6)',
                borderRadius: 6
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: true },
                tooltip: { enabled: true }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            animation: {
                duration: 800,
                easing: 'easeOutQuart'
            }
        }
    });

    async function loadBarChartData() {
        try {
            const response = await fetch('/MethodologiesbyMonth');
            const result = await response.json();

            const labels = result.map(x => x.label);
            const values = result.map(x => x.value);

            barChart.data.labels = labels;
            barChart.data.datasets[0].data = values;

            barChart.update();

        } catch (error) {
            console.error('Error loading bar chart:', error);
        }
    }

    loadBarChartData();
    setInterval(loadBarChartData, 30000);

</script>

