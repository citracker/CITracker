@inject IHttpContextAccessor hca
@model Shared.ViewModels.ContinuousImprovementVM

<!-- Page Header Close -->
<div id="financial_info" class="row row-sm d-none">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header justify-content-between">
                <div class="card-title"> Financial Verification </div>
            </div>
            <div class="card-body" style="min-height: 650px;height: 650px;overflow-y:scroll;">
                <div id="validationSummaryFP" class="alert alert-danger d-none" role="alert">
                    <ul class="mb-0"></ul>
                </div>
                @{
                    var isAdminOrFacilitator = hca?.HttpContext?.Session?.GetString("UserRole") == "Admin" || Model.Project.FacilitatorId == Convert.ToInt64(hca?.HttpContext?.Session?.GetString("UserId"));
                }
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                        <label for="text-area" class="form-label align-items-center justify-content-center" style="display:flex">
                            One time savings
                            <a href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-custom-class="tooltip-primary" class="text-primary" data-bs-original-title="Savings that will not be recurring overtime"> <i class="fe fe-info"></i></a>
                        </label>
                        <div class="d-flex align-items-center justify-content-center">
                            <div class="mb-lg-0"><h4 class="text-lg-center">N</h4></div>
                            <div class="custom-toggle-switch toggle-md ms-sm-2 ms-0">
                                <input id="ots" name="ots" type="checkbox" @(Model.Project.IsOneTimeSavings == true ? "checked" : "") @(isAdminOrFacilitator == true ? "" : "readonly")>
                                <label for="ots" class="label-success mb-2"></label>
                            </div>
                            <div class="mb-lg-0 ms-3"><h4 class="text-lg-center">Y</h4></div>
                        </div>
                    </div>

                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                        <label for="text-area" class="form-label align-items-center justify-content-center" style="display:flex">
                            Carry over savings
                            <a href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-custom-class="tooltip-primary" class="text-primary" data-bs-original-title="Savings spanning over more than a year"> <i class="fe fe-info"></i></a>
                        </label>
                        <div class="d-flex align-items-center justify-content-center">
                            <div class="mb-lg-0"><h4 class="text-lg-center">N</h4></div>
                            <div class="custom-toggle-switch toggle-md ms-sm-2 ms-0">
                                <input id="cos" name="cos" type="checkbox" @(Model.Project.IsCarryOverSavings == true ? "checked" : "") @(isAdminOrFacilitator == true ? "" : "readonly")>
                                <label for="cos" class="label-success mb-2"></label>
                            </div>
                            <div class="mb-lg-0 ms-3"><h4 class="text-lg-center">Y</h4></div>
                        </div>
                    </div>

                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                        <label for="text-area" class="form-label align-items-center justify-content-center" style="display:flex">
                            Select a date after the project start date
                        </label>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-text text-muted"> <i class="ri-calendar-line"></i> </div>
                                <input type="text" class="form-control flatpickr-input pj-date-input active" name="cosdate" placeholder="Date" value="@(Model.Project.FinancialVerificationDate.ToString("yyyy-MM-dd"))" @(isAdminOrFacilitator == true ? "" : "readonly") readonly="readonly">
                            </div>
                        </div>
                    </div>
                </div>

                <label class="main-content-label main-content-label-lg mt-5 mb-5">
                    Hard Savings
                    <a href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-custom-class="tooltip-primary" class="text-primary" data-bs-original-title="Financial Benefits"> <i class="fe fe-info"></i></a>
                </label>

                <nav class="navbar navbar-expand-lg bg-light">
                    <div class="container-fluid">
                        <a class="navbar-brand col-xl-3 col-lg-3 col-md-3 col-sm-3" href="">Months</a>
                        <a class="navbar-brand col-xl-3 col-lg-3 col-md-3 col-sm-3" href="">Saving Type</a>
                        <a class="navbar-brand col-xl-3 col-lg-3 col-md-3 col-sm-3" href="">Saving Amount</a>
                        <a class="navbar-brand col-xl-3 col-lg-3 col-md-3 col-sm-3" href="">Add/Remove</a>
                    </div>
                </nav>
                <div class="finCardBody">
                    <div class="row gy-4 finBody mt-2 mb-2">
                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-text text-muted"> <i class="ri-calendar-line"></i> </div>
                                    <input type="text" class="form-control flatpickr-input month-picker active" name="date" placeholder="Month" readonly="readonly">
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3">
                            <select class="form-control savings-type" name="savingstype">
                                <option selected disabled>Select a savings type</option>
                                <option value="Cost Reduction">Cost Reduction</option>
                                <option value="Revenue">Revenue</option>
                                <option value="Cost Avoidance">Cost Avoidance</option>
                                <option value="Cost Containment">Cost Containment</option>
                            </select>
                        </div>

                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" name="savingsvalue" placeholder="Enter saving Amount" oninput="formatNumberRealTime(this)" onkeyup="formatNumberRealTime(this)" onkeypress="return (event.charCode >= 48 && event.charCode <= 57) || event.charCode == 8 || event.charCode == 0 || event.charCode == 13" oninput="this.value = this.value.replace(/[^0-9]/g, '')" onpaste="return false">
                                <button class="btn btn-outline-primary currency" type="button" aria-expanded="true"></button>
                            </div>
                        </div>

                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3">
                            <div class="mb-md-0 mb-2 ms-5">
                                <button class="btn btn-icon btn-primary btn-wave waves-effect waves-light addFin"> <i class="fe fe-plus"></i> </button>
                                <button class="btn btn-icon btn-warning btn-wave me-5 waves-effect waves-light d-none removeFin"> <i class="fe fe-minus"></i> </button>
                            </div>
                        </div>
                    </div>
                </div>

                <label class="main-content-label main-content-label-lg mt-5 mb-5">
                    Soft Savings
                    <a href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-custom-class="tooltip-primary" class="text-primary" data-bs-original-title="This includes non-financial savings (e.g. time, space, quality, safety)"> <i class="fe fe-info"></i></a>
                </label>

                <nav class="navbar navbar-expand-lg bg-light">
                    <div class="container-fluid">
                        <a class="navbar-brand col-xl-4 col-lg-4 col-md-4 col-sm-4" href="">Category: Time, Space etc.</a>
                        <a class="navbar-brand col-xl-4 col-lg-4 col-md-4 col-sm-4" href="">Saving Amount (in sec, sqft, etc.)</a>
                        <a class="navbar-brand col-xl-4 col-lg-4 col-md-4 col-sm-4" href="">Add/Remove</a>
                    </div>
                </nav>
                <div class="finSftCardBody">
                    <div class="row gy-4 finSftBody mt-2 mb-2">
                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                            <select class="form-control" name="category">
                                <option selected disabled>Select a Category</option>
                                <option value="Space">Space</option>
                                <option value="Time">Time</option>
                                <option value="Quality">Quality</option>
                                <option value="Safety">Safety</option>
                                <option value="Defect Rate">Defect Rate</option>
                            </select>
                        </div>

                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" name="savingvalue" placeholder="Enter saving Amount" oninput="formatNumberRealTime(this)" onkeyup="formatNumberRealTime(this)" onkeypress="return (event.charCode >= 48 && event.charCode <= 57) || event.charCode == 8 || event.charCode == 0 || event.charCode == 13" oninput="this.value = this.value.replace(/[^0-9]/g, '')" onpaste="return false">
                                <button class="btn btn-outline-primary" type="button"></button>
                            </div>
                            <input type="hidden" class="savingUnit" name="savingUnit" id="savingUnit" value="">
                        </div>

                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                            <div class="mb-md-0 mb-2 ms-5">
                                <button class="btn btn-icon btn-primary btn-wave waves-effect waves-light addSftFin"> <i class="fe fe-plus"></i> </button>
                                <button class="btn btn-icon btn-warning btn-wave me-5 waves-effect waves-light d-none removeSftFin"> <i class="fe fe-minus"></i> </button>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-6">
                        <div class="card custom-card">
                            <div class="card-body">
                                <label for="formFileLg" class="form-label">Financial Report (Supported Format: PPT, Excel, PDF, Word)</label>
                                <input class="form-control form-control-lg lockable" type="file">
                                <div class="col-xl-3"> 
                                    <div class="card border-0"> 
                                        <div class="alert alert-solid-warning border border-warning mb-0 p-2"> 
                                            <div class="d-flex align-items-start"> 
                                                <div class="me-2"> 
                                                    <svg class="flex-shrink-0 svg-white" xmlns="http://www.w3.org/2000/svg" enable-background="new 0 0 24 24" height="1.5rem" viewBox="0 0 24 24" width="1.5rem" fill="#000000"><g><rect fill="none" height="24" width="24"></rect></g><g><g><g><path d="M12,5.99L19.53,19H4.47L12,5.99 M12,2L1,21h22L12,2L12,2z"></path><polygon points="13,16 11,16 11,18 13,18"></polygon><polygon points="13,10 11,10 11,15 13,15"></polygon></g></g></g></svg> 
                                                </div> 
                                                <div class="text-fixed-white w-100"> 
                                                    <div class="fw-semibold d-flex justify-content-between">NOTE!!!</div> 
                                                    <div class="fs-12 op-8 mb-1">To attach the financial report, ensure to enter in hard savings, upload final report under the attachment status and move project to completed status under the project detail tab.</div>
                                                </div> 
                                            </div> 
                                        </div> 
                                    </div> 
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-6">
                        <div class="card custom-card">
                            <div class="card-body">
                                <label for="formFileLg" class="form-label">Comment</label>
                                <textarea class="form-control lockable" rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                </div>


                <label class="main-content-label main-content-label-lg mt-5 mb-5">
                    Audited Details (Auditor Only)
                    <a href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-custom-class="tooltip-primary" class="text-primary" data-bs-original-title="Closed projects can be randomly selected for auditing"> <i class="fe fe-info"></i></a>
                </label>

                <nav class="navbar navbar-expand-lg bg-light">
                    <div class="container-fluid">
                        <a class="navbar-brand col-xl-4 col-lg-4 col-md-4 col-sm-4" href="">Audited</a>
                        <a class="navbar-brand col-xl-4 col-lg-4 col-md-4 col-sm-4" href="">Auditor</a>
                        <a class="navbar-brand col-xl-4 col-lg-4 col-md-4 col-sm-4" href="">Audited Date</a>
                    </div>
                </nav>
                <div class="row gy-4 mt-2 mb-2">
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                        <div class="form-check form-check-lg d-flex align-items-center">
                            <input class="form-check-input lockable" type="checkbox" value="">
                        </div>
                    </div>

                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                        <select class="js-choice auditmember-select" name="auditmember" required></select>
                    </div>

                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-text text-muted"> <i class="ri-calendar-line"></i> </div>
                                <input type="text" class="form-control flatpickr-input active lockable" placeholder="Audited Date" readonly="readonly">
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="card-footer border-top-card">
                <button class="btn btn-primary" onclick="loadPartial('financial_info', 'attachments_info')">Previous</button>
                <button class="btn btn-success shadow-success" onclick="CIProjectFinancial(this)">Save &amp; Next</button>
            </div>
        </div>
    </div>
</div>

<script>
    window.HardSavings = @Html.Raw(Json.Serialize(Model.ProjectFinancial.Hard == null ? new List<Shared.Request.CIFinancialDTO>() : Model.ProjectFinancial.Hard));
    window.SoftSavings = @Html.Raw(Json.Serialize(Model.ProjectFinancial.Soft == null ? new List<Shared.Request.CIFinancialDTO>() : Model.ProjectFinancial.Soft));

    console.log(window.SoftSavings);

    const CATEGORY_UNIT_MAP = {
        "Space": "sqft",
        "Time": "hr",
        "Quality": "#",
        "Safety": "TRIR",
        "Defect Rate": "#"
    };

        // Handle category change (works for dynamically added rows)
    $(document).on('change', 'select[name="category"]', function () {

        const selectedCategory = $(this).val();
        if (!selectedCategory) return;

        const unit = CATEGORY_UNIT_MAP[selectedCategory] || '';

        // Find the unit button in the same row
        const $row = $(this).closest('.finSftBody');
        const $unitButton = $row.find('.btn-outline-primary');
        const $savingUnit  = $row.find('.savingUnit');

        // Update button text
        $unitButton.text(unit);
        $savingUnit.val(unit);
    });


    document.addEventListener('partialShown', function (e) {
        if (e.detail.id === 'financial_info') {
            const currencyInp = document.querySelector(".currency");
            currencyInp.innerHTML = window.AppState.CIProject.Currency.toString();

        }
    });

    document.addEventListener("DOMContentLoaded", function () {

        /* -------------------- INIT -------------------- */

        const MAX_FORMS = 12;
        const $container = $('.finCardBody');
        const $checkbox = $('#ots');

        initMonthPicker($container);
        setDisabled('.lockable', true);

        /* -------------------- PROJECT DATE LOGIC -------------------- */

        const dateInput = document.querySelector(".pj-date-input");
        if (dateInput) {
            const picker = flatpickr(dateInput, { dateFormat: "Y-m-d" });

            document.getElementById("cos")?.addEventListener("change", function () {
                if (this.checked) {
                    const date = new Date(window.AppState.CIProject.StartDate);
                    date.setDate(date.getDate() + 1);
                    picker.set("minDate", date);
                } else {
                    picker.set("minDate", null);
                    picker.clear();
                }
            });
        }

        /* -------------------- POPULATE EXISTING DATA -------------------- */

        if (window.HardSavings.length > 0) {
            populateExistingSavings(window.HardSavings);
        }

        /* -------------------- CHECKBOX RESET LOGIC -------------------- */

        $checkbox.on('change', function () {
            if (this.checked) {
                // Keep only first form
                $container.find('.finBody').not(':first').remove();

                const $first = $container.find('.finBody').first();
                resetForm($first);

                $first.find('.addFin').removeClass('d-none');
                $first.find('.removeFin').addClass('d-none');
            }
        });

        /* -------------------- ADD FORM -------------------- */

        $(document).on('click', '.addFin', function (e) {
            e.preventDefault();

            if ($checkbox.is(':checked')) return;

            const count = $('.finBody').length;

            if (count >= MAX_FORMS) {
                alert('You can only add up to 12 entries.');
                return;
            }

            const $template = $('.finBody').first();
            const $newForm = $template.clone(false);

            resetForm($newForm);
            $newForm.find('[id]').removeAttr('id');

            $newForm.find('.addFin').addClass('d-none');
            $newForm.find('.removeFin').removeClass('d-none');

            $container.append($newForm);
            initMonthPicker($newForm);
        });

        /* -------------------- REMOVE FORM -------------------- */

        $(document).on('click', '.removeFin', function (e) {
            e.preventDefault();

            const $forms = $('.finBody');
            if ($forms.length > 1) {
                $(this).closest('.finBody').remove();
            }

            const $first = $('.finBody').first();
            $first.find('.addFin').removeClass('d-none');
            $first.find('.removeFin').addClass('d-none');
        });

        /* -------------------- HELPERS -------------------- */

        function resetForm($form) {
            $form.find('input').val('');
            $form.find('select').prop('selectedIndex', 0);
            $form.find('.currency').removeClass('active');
        }

        function populateExistingSavings(items) {
            const $template = $('.finBody').first();

            // First (static) form
            populateForm($template, items[0]);
            $template.find('.addFin').removeClass('d-none');
            $template.find('.removeFin').addClass('d-none');

            // Remaining forms
            for (let i = 1; i < items.length; i++) {
                const $clone = $template.clone(false);

                $clone.find('[id]').removeAttr('id');
                resetForm($clone);

                $clone.find('.addFin').addClass('d-none');
                $clone.find('.removeFin').removeClass('d-none');

                $container.append($clone);
                initMonthPicker($clone);

                populateForm($clone, items[i]);
            }
        }

        function populateForm($form, data) {
            // Month picker
            const date = new Date(data.Date);
            const picker = $form.find('.month-picker')[0]?._flatpickr;
            if (picker) {
                picker.setDate(date, true);
            }

            // Savings type
            $form.find('.savings-type').val(data.SavingType);

            // Value
            $form.find('input[name="savingsvalue"]').val(
                Number(data.SavingValue).toLocaleString()
            );

            // Currency state
            if (data.IsCurrency) {
                $form.find('.currency').addClass('active');
            }
        }

    });

    $(document).ready(function() {
        const users = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.OrganizationUser));

        let formCount = 1;
        const auditMemberChoices = new WeakMap();

        function initAuditMemberSelect(selectEl) {
            if (!selectEl || auditMemberChoices.has(selectEl)) return;

            const choice = new Choices(selectEl, {
                removeItemButton: true,
                searchEnabled: true,
                shouldSort: false,
                placeholderValue: 'Type user...'
            });

            auditMemberChoices.set(selectEl, choice);

            selectEl.addEventListener('search', function (event) {
                const term = event.detail.value.toLowerCase();

                const filtered = users.filter(u =>
                    u.Name.toLowerCase().includes(term)
                );

                choice.clearChoices();
                choice.setChoices(
                    filtered.map(u => ({
                        value: u.Id,
                        label: u.Name
                    })),
                    'value',
                    'label',
                    true
                );
            });
        }

        initAuditMemberSelect(document.querySelectorAll('.auditmember-select')[0]);
    });

    $(document).ready(function () {

        const $container = $('.finSftCardBody');

        /* -------------------- INIT -------------------- */

        if (window.SoftSavings.length > 0) {
            populateExisting(window.SoftSavings);
        }

        /* -------------------- ADD -------------------- */

        $(document).on('click', '.addSftFin', function (e) {
            e.preventDefault();

            const $template = $('.finSftBody').first();
            const $clone = $template.clone(false);

            resetForm($clone);

            $clone.find('.addSftFin').addClass('d-none');
            $clone.find('.removeSftFin').removeClass('d-none');

            $container.append($clone);
        });

        /* -------------------- REMOVE -------------------- */

        $(document).on('click', '.removeSftFin', function (e) {
            e.preventDefault();

            if ($('.finSftBody').length > 1) {
                $(this).closest('.finSftBody').remove();
            }

            // Always keep + on first row
            const $first = $('.finSftBody').first();
            $first.find('.addSftFin').removeClass('d-none');
            $first.find('.removeSftFin').addClass('d-none');
        });

        /* -------------------- HELPERS -------------------- */

        function populateExisting(items) {
            const $first = $('.finSftBody').first();

            // Fill static form
            fillForm($first, items[0]);
            $first.find('.addSftFin').removeClass('d-none');
            $first.find('.removeSftFin').addClass('d-none');

            // Clone remaining
            for (let i = 1; i < items.length; i++) {
                const $clone = $first.clone(false);

                resetForm($clone);

                $clone.find('.addSftFin').addClass('d-none');
                $clone.find('.removeSftFin').removeClass('d-none');

                $container.append($clone);
                fillForm($clone, items[i]);
            }
        }

        function fillForm($form, data) {
            // Category
            $form.find('select[name="category"]').val(data.Category);

            // Value
            $form.find('input[name="savingvalue"]').val(
                Number(data.SavingValue).toLocaleString()
            );

            // Unit (hidden + button)
            $form.find('.savingUnit').val(data.SavingUnit);
            $form.find('.input-group button').text(data.SavingUnit);
            $form.find('.input-group button').text(data.SavingUnit);
        }

        function resetForm($form) {
            $form.find('input').val('');
            $form.find('select').prop('selectedIndex', 0);
            $form.find('.savingUnit').val('');
            $form.find('.input-group button').text('');
        }

    });

    function initMonthPicker($scope) {
        $scope.find('.month-picker').each(function () {

            // Prevent double-initialization
            if (this._flatpickr) return;

            flatpickr(this, {
                dateFormat: "Y-m",
                plugins: [
                    new monthSelectPlugin({
                        shorthand: true,
                        dateFormat: "Y-m",
                        altFormat: "F Y"
                    })
                ]
            });
        });
    }

    function setDisabled(selector, disabled) {
        document.querySelectorAll(selector).forEach(el => {
            el.disabled = disabled;
        });
    }

    function collectHardData() {
        const hardSavings = [];

        document.querySelectorAll('.finBody').forEach(section => {
            const date = section.querySelector('input[name="date"]')?.value;
            const savingType = section.querySelector('select[name="savingstype"]')?.value;
            const savingValue = section.querySelector('input[name="savingsvalue"]')?.value;

            if (!date) return;

            hardSavings.push({
                Date: date,
                SavingType: savingType,
                SavingValue: savingValue
            });
        });

        return hardSavings;
    }

    function collectSoftData() {
        const softSavings = [];

        document.querySelectorAll('.finSftBody').forEach(section => {
            const category = section.querySelector('select[name="category"]')?.value;
            const savingValue = section.querySelector('input[name="savingvalue"]')?.value;
            const savingUnit = section.querySelector('input[name="savingUnit"]')?.value;


            if (category && category.trim() !== '') {
                softSavings.push({
                    Category: category,
                    SavingUnit: savingUnit,
                    SavingValue: savingValue
                });
            }
        });

        return softSavings;
    }

    async function CIProjectFinancial(ref) {
        const seenMonths = new Set();
        let duplicateMonth = null;
        ref.innerHTML = '<i class="fas fa-cog fa-spin"></i>';
        ref.disabled = true;

        const hardData = collectHardData();
        const softData = collectSoftData();
        const formData = new FormData();

        formData.append('__RequestVerificationToken', getAntiForgeryToken());

        if (window.AppState.CIProject !== null) {
            formData.append('ProjectId', window.AppState.CIProject.Id.toString());
        }

        // Append hard data savings using index notation for model binding
        hardData.forEach((member, index) => {
            formData.append(`Hard[${index}].Date`, member.Date);
            formData.append(`Hard[${index}].SavingType`, member.SavingType);
            formData.append(`Hard[${index}].SavingValue`, member.SavingValue);

            // Normalize to YYYY-MM (important)
            const monthKey = member.Date.substring(0, 7);

            if (seenMonths.has(monthKey)) {
                duplicateMonth = monthKey;
                return;
            }

            seenMonths.add(monthKey);
        });

        softData.forEach((member, index) => {
            formData.append(`Soft[${index}].Category`, member.Category);
            formData.append(`Soft[${index}].SavingUnit`, member.SavingUnit);
            formData.append(`Soft[${index}].SavingValue`, member.SavingValue);
        });

        // Validation
        if (hardData.length === 0 && softData.length === 0) {
            displayErrorFP('Please add at least one saving type (either hard or soft saving).');

            ref.innerHTML = 'Save &amp; Next';
            ref.disabled = false;
            return;
        }

        if (duplicateMonth) {
            displayErrorFP(`Duplicate month detected: ${duplicateMonth}`);

            ref.innerHTML = 'Save &amp; Next';
            ref.disabled = false;
            return;
        }

        formData.append(`OneTimeSaving`, !!document.querySelector('input[name="ots"]:checked'));
        formData.append(`CarryOverSaving`, !!document.querySelector('input[name="cos"]:checked'));
        formData.append(`FinancialVerificationDate`, document.querySelector('input[name="cosdate"]')?.value);

        try
        {
            const response = await fetch('/NewCIProjectFinancial', {
                method: 'POST',
                credentials: 'same-origin',
                body: formData
            });


            if (!response.ok) {
                const result = await response.json();
                displayErrorsFP(result.errors);
                ref.innerHTML = 'Save &amp; Next';
                ref.disabled = false;
                return;
            }

            window.location.href = '/AllCIProjects';

        } catch (err) {
            console.error(err);
            displayErrorFP('An error occurred - '+ err);
        }
        ref.innerHTML = 'Save &amp; Next';
        ref.disabled = false;
    }


    function displayErrorFP(error) {
        const alertDiv = document.getElementById("validationSummaryFP");
        const list = alertDiv.querySelector("ul");

        // Clear previous errors
        list.innerHTML = "";

        const li = document.createElement("li");
                li.textContent = error;
                li.className = 'fs-18';
                list.appendChild(li);

        // Show alert
        alertDiv.classList.remove("d-none");

        const div = document.querySelector('.card-body');
        // For smooth scroll inside div
        div.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    }

    function displayErrorsFP(errors) {
        const alertDiv = document.getElementById("validationSummaryFP");
        const list = alertDiv.querySelector("ul");

        // Clear previous errors
        list.innerHTML = "";

        Object.keys(errors).forEach(field => {
            errors[field].forEach(message => {
                const li = document.createElement("li");
                li.textContent = message;
                li.className = 'fs-18';
                list.appendChild(li);
            });
        });

        // Show alert
        alertDiv.classList.remove("d-none");
        const div = document.querySelector('.card-body');
        // For smooth scroll inside div
        div.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    }
</script>