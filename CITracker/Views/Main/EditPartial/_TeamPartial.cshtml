@inject IHttpContextAccessor hca
@model Shared.ViewModels.ContinuousImprovementVM

<!-- Page Header Close -->
<div id="team_info" class="row row-sm d-none">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header justify-content-between">
                <div class="card-title"> Team Members </div>
            </div>
            <div class="card-body custom-scroll teamCardBody">
                <div id="validationSummaryTP" class="alert alert-danger d-none" role="alert">
                    <ul class="mb-0"></ul>
                </div>
                @{
                    var isAdminOrFacilitator = hca?.HttpContext?.Session?.GetString("UserRole") == "Admin" || Model.Project.FacilitatorId == Convert.ToInt64(hca?.HttpContext?.Session?.GetString("UserId"));
                }
                @Html.AntiForgeryToken()

                <!--Hidden form-->
                <div class="row gy-4 teamBody m-3 team-member-section d-none" id="teamTemplate">
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                        <label class="form-label">Name<span style="color:red">*</span></label>
                        <select class="js-choice teammember-select" name="teammember" id="teammember" required></select>
                        <input type="text" class="form-control team-id" name="id" hidden>
                    </div>

                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3">
                        <label for="text-area" class="form-label">
                            Role <span style="color:red">*</span>
                            <a href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-custom-class="tooltip-primary" class="text-primary" title="Select roles for team members, ensure to have a minimum of one facilitator/owner"> <i class="fe fe-info"></i></a>
                        </label>
                        <select class="form-control role-select" id="role" name="role" required>
                            <option selected disabled>Select Role</option>
                            <option value="Executive Sponsor">Executive Sponsor</option>
                            <option value="Sponsor">Sponsor</option>
                            <option value="Facilitator">Facilitator/Owner</option>
                            <option value="Team Member">Team Member</option>
                            <option value="Champion">Champion</option>
                            <option value="Stakeholders">Stakeholders</option>
                            <option value="Coach/Mentor">Coach/Mentor</option>
                            <option value="Resources">Resources</option>
                        </select>
                    </div>


                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                        <p class="mb-2 fw-medium">
                            Notification
                            <a href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-custom-class="tooltip-primary" class="text-primary" title="Toggle for any team member you would like to receive an email notification whenever any update is made"> <i class="fe fe-info"></i></a>
                        </p>
                        <div class="form-check form-check-lg d-flex align-items-center align-self-center">
                            <input class="form-check-input notif-check" type="checkbox" value="" id="notif" name="notif">
                        </div>
                    </div>

                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                        <p class="mb-2 fw-medium">Add/Remove</p>
                        <div class="mb-md-0 mb-2">
                            <button class="btn btn-icon btn-primary btn-wave waves-effect waves-light add"> <i class="fe fe-plus"></i> </button>
                            <button class="btn btn-icon btn-warning btn-wave me-5 waves-effect waves-light d-none remove"> <i class="fe fe-minus"></i> </button>
                        </div>
                    </div>
                </div>

                <div class="row gy-4 teamBody m-3 team-member-section">
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                        <label for="teammember" class="form-label">Name<span style="color:red">*</span></label>
                        <select class="js-choice teammember-select" name="teammember" id="teammember" required></select>
                        <input type="text" class="form-control team-id" name="id" hidden>
                    </div>


                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3">
                        <label for="role" class="form-label">
                            Role <span style="color:red">*</span>
                            <a href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-custom-class="tooltip-primary" class="text-primary" title="Select roles for team members, ensure to have a minimum of one facilitator/owner"> <i class="fe fe-info"></i></a>
                        </label>
                        <select class="form-control role-select" name="role" required>
                            <option selected disabled>Select Role</option>
                            <option value="Executive Sponsor">Executive Sponsor</option>
                            <option value="Sponsor">Sponsor</option>
                            <option value="Facilitator">Facilitator/Owner</option>
                            <option value="Team Member">Team Member</option>
                            <option value="Champion">Champion</option>
                            <option value="Stakeholders">Stakeholders</option>
                            <option value="Coach/Mentor">Coach/Mentor</option>
                            <option value="Resources">Resources</option>
                        </select>
                    </div>


                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                        <p class="mb-2 fw-medium">
                            Notification
                            <a href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-custom-class="tooltip-primary" class="text-primary" title="Toggle for any team member you would like to receive an email notification whenever any update is made"> <i class="fe fe-info"></i></a>
                        </p>
                        <div class="form-check form-check-lg d-flex align-items-center align-self-center">
                            <input class="form-check-input notif-check" type="checkbox" name="notif">
                        </div>
                    </div>

                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                        <p class="mb-2 fw-medium">Add/Remove</p>
                        <div class="mb-md-0 mb-2">
                            <button class="btn btn-icon btn-primary btn-wave waves-effect waves-light add"> <i class="fe fe-plus"></i> </button>
                            <button class="btn btn-icon btn-warning btn-wave me-5 waves-effect waves-light d-none remove"> <i class="fe fe-minus"></i> </button>
                        </div>
                    </div>

                </div>
            </div>
            <div class="card-footer border-top-card">
                <button class="btn btn-primary" onclick="loadPartial('team_info', 'project_info')">Previous</button>
                <button class="btn btn-success shadow-success" onclick="UpdateCIProjectTeams(this, 'team_info', 'tools_info')">Save &amp; Next</button>
            </div>
        </div>
    </div>
</div>

<script>
    const users = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.OrganizationUser));
    window.initialTeamMembers = @Html.Raw(Json.Serialize(Model.ProjectTeam?.Team == null ? new List<Shared.Request.TeamMembersDTO>() : Model.ProjectTeam?.Team));

    $(document).ready(function () {

        // =========================
        // Utilities
        // =========================
        function populateTeamMemberOptions(select) {
            select.innerHTML = '<option value="">Select Team Member</option>';

            users.forEach(u => {
                const opt = document.createElement("option");
                opt.value = u.Id;
                opt.textContent = u.Name;
                select.appendChild(opt);
            });
        }

        function initRow(section, data = null) {

            const id = section.querySelector('.team-id');
            const memberSelect = section.querySelector('.teammember-select');
            const roleSelect   = section.querySelector('.role-select');
            const notifCheck   = section.querySelector('.notif-check');

            populateTeamMemberOptions(memberSelect);

            const choices = new Choices(memberSelect, {
                searchEnabled: true,
                shouldSort: false,
                itemSelectText: '',
                removeItemButton: true
            });

            if (data) {
                id.value = data.Id;

                if (data.UserId) {
                    choices.setChoiceByValue(data.UserId.toString());
                }

                if (data.Role) {
                    roleSelect.value = data.Role;
                }

                notifCheck.checked = data.SendNotification === true;
            }

            return choices;
        }

        function createTeamMemberBlock(data = null) {

            const newForm = $('#teamTemplate')
                .clone(false)
                .removeClass('d-none')
                .removeAttr('id')
                .addClass('teamBody team-member-section');

            newForm.find('.add').addClass('d-none');
            newForm.find('.remove').removeClass('d-none');

            $('.teamCardBody').append(newForm);

            initRow(newForm[0], data);
        }

        // =========================
        // Initial load
        // =========================
        const visibleSection = document.querySelector(
            '.team-member-section:not(#teamTemplate)'
        );

        if (window.initialTeamMembers.length > 0) {

            // 1️⃣ First member goes into visible row
            initRow(visibleSection, window.initialTeamMembers[0]);

            // 2️⃣ Remaining members get cloned rows
            for (let i = 1; i < window.initialTeamMembers.length; i++) {
                createTeamMemberBlock(window.initialTeamMembers[i]);
            }

        } else {
            // Create mode: empty visible row
            initRow(visibleSection);
        }

        // =========================
        // Add row
        // =========================
        $(document).on('click', '.add', function (e) {
            e.preventDefault();
            createTeamMemberBlock();
        });

        // =========================
        // Remove row
        // =========================
        $(document).on('click', '.remove', function (e) {
            e.preventDefault();

            if ($('.teamBody').length > 1) {
                $(this).closest('.teamBody').remove();
            }
        });

    });


    function collectTeamData() {
        const team = [];

        try{
            // Get all team member sections
            const teamSections = document.querySelectorAll('.team-member-section');

            teamSections.forEach((section, index) => {
                // Get the select elements and checkbox for this section
                const teamId = section.querySelector('input[name="id"]');
                const memberSelect = section.querySelector('select[name="teammember"]');
                const roleSelect = section.querySelector('select[name="role"]');
                const notifCheckbox = section.querySelector('input[name="notif"]');

                // Get the selected values
                const teamIdVal = teamId?.value;
                const memberName = memberSelect?.value;
                const role = roleSelect?.value;
                const getNotification = notifCheckbox?.checked == true ? true : false;

                // Only add if member is selected (has a value)
                if (memberName && memberName.trim() !== '') {
                    team.push({
                        Id: teamIdVal,
                        Name: memberName.trim(),
                        Role: role || '',
                        GetNotification: getNotification
                    });
                }
            });
        }catch (err) {
            console.error(err);
            displayErrorTP('An error occurred - '+ err);
        }

        return team;
    }

    async function UpdateCIProjectTeams(ref, hide, show) {
        ref.innerHTML = '<i class="fas fa-cog fa-spin"></i>';
        ref.disabled = true;

        const teamData = collectTeamData();
        const formData = new FormData();

        formData.append('__RequestVerificationToken', getAntiForgeryToken());

        if (window.AppState.CIProject !== null) {
            formData.append('ProjectId', window.AppState.CIProject.Id.toString());
        }

        // Append team members using index notation for model binding
        teamData.forEach((member, index) => {
            formData.append(`Team[${index}].Id`, member.Id);
            formData.append(`Team[${index}].UserId`, member.Name);
            formData.append(`Team[${index}].Role`, member.Role);
            formData.append(`Team[${index}].SendNotification`, member.GetNotification);
        });

        // Validation
        if (teamData.length === 0) {
            displayErrorTP('Please add at least one team member.');

            ref.innerHTML = 'Save &amp; Next';
            ref.disabled = false;
            return;
        }

        const hasEmptyName = teamData.some(member => !member.Name || member.Name.trim() === '');
        if (hasEmptyName) {
            displayErrorTP('All team member names are required.');

            ref.innerHTML = 'Save &amp; Next';
            ref.disabled = false;
            return;
        }

        const hasEmptyRole = teamData.some(member => !member.Role || member.Role.trim() === '');
        if (hasEmptyRole) {
            displayErrorTP('All team member roles are required.');

            ref.innerHTML = 'Save &amp; Next';
            ref.disabled = false;
            return;
        }

        const hasFacilitator = teamData.some(member => member.Role === 'Facilitator');
        if (!hasFacilitator) {
            displayErrorTP('Project must have at least one Facilitator.');

            ref.innerHTML = 'Save &amp; Next';
            ref.disabled = false;
            return;
        }

        try
        {
            const response = await fetch('/UpdateCIProjectTeam', {
                method: 'POST',
                credentials: 'same-origin',
                body: formData
            });

            if (!response.ok) {
                const result = await response.json();
                displayErrorsTP(result.errors);
                ref.innerHTML = 'Save &amp; Next';
                ref.disabled = false;
                return;
            }

             $("#" + hide).addClass("d-none");
             $("#" + show).removeClass("d-none");

             document.dispatchEvent(
                 new CustomEvent('partialShown', { detail: { id: show } })
             );

        } catch (err) {
            console.error(err);
            displayErrorTP('An error occurred - '+ err);
        }
        ref.innerHTML = 'Save &amp; Next';
        ref.disabled = false;
    }


    function displayErrorTP(error) {
        const alertDiv = document.getElementById("validationSummaryTP");
        const list = alertDiv.querySelector("ul");

        // Clear previous errors
        list.innerHTML = "";

        const li = document.createElement("li");
                li.textContent = error;
                li.className = 'fs-18';
                list.appendChild(li);

        // Show alert
        alertDiv.classList.remove("d-none");

        const div = document.querySelector('.card-body');
        // For smooth scroll inside div
        div.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    }

    function displayErrorsTP(errors) {
        const alertDiv = document.getElementById("validationSummaryTP");
        const list = alertDiv.querySelector("ul");

        // Clear previous errors
        list.innerHTML = "";

        Object.keys(errors).forEach(field => {
            errors[field].forEach(message => {
                const li = document.createElement("li");
                li.textContent = message;
                li.className = 'fs-18';
                list.appendChild(li);
            });
        });

        // Show alert
        alertDiv.classList.remove("d-none");
        const div = document.querySelector('.card-body');
        // For smooth scroll inside div
        div.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    }
</script>